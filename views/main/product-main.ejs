
<!-- This is about Pagination -->

<!-- This is Inheriting Layout -->
<% layout('layout') -%>
<div class="jumbotron" id = "navbar-gap">
  <div class="container">
  <h1>Shop Smart, Save Big</h1>
  <p>Find your favourite Product</p>
  <!-- <p><a href="/signup" class="btn btn-primary btn-large">Signup &raquo;</a></p> -->
</div>
</div>


<div class="container">

  <div class="row">
    <% for(var i = 0; i < products.length; i++){ %>
      <div class="col-lg-4 col-sm-6">
        <a href="/product/<%= products[i]._id %>">
          <div class="thumbnail">
            <img src="<%= products[i].image %>" alt="Product Image">
            <div class="caption">
              <h3> <%= products[i].name %> </h3>
              <p> <%= products[i].category.name %> </p>
              <p>$<%= products[i].price %> </p>
            </div>
          </div>
        </a>
      </div>
    <%}%>

    <ul class = "pagination in-center">
      <li>
       <%
        for(var i = 0; i < pages; i++) {
          %>
            <%
                if(i === 1) {%>

                <li><a href="/"><%= i %></a></li>
                  <%} else{%>

                <li><a href="/page/<%= i %>"><%= i %></a></li>
                <%}
            %>

          <%
        }
       %>
      </li>
    </ul>

  </div>
</div>
